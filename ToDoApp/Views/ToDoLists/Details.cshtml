@model ToDoApp.Data.ToDoList

@{
    ViewData["Title"] = "Details - List";
}

<h1>Details - List</h1>

<div>
    <h4>ToDoList</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>
    <h5>To Do Items</h5>
    <ul>
        @foreach (var item in Model.Items)
        {
            <li><a asp-controller="ToDoItems" asp-action="Details" asp-route-id="@item.Id">@item.Title</a></li>
        }
    </ul>
</div>
<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
